                    <!-- item blog -->
                    @foreach (var item in Model)
                    {
                        <div class="p-b-63">
                            <a href="/Content/SiteLayout/blog-detail.html" class="hov-img0 how-pos5-parent">
                                <img src="@item.ResimURL" alt="@item.Baslik">

                                <div class="flex-col-c-m size-123 bg9 how-pos5">
                                    <span class="ltext-107 cl2 txt-center">
                                        22
                                    </span>

                                    <span class="stext-109 cl3 txt-center">
                                        Jan 2018
                                    </span>
                                </div>
                            </a>

                            <div class="p-t-32">
                                <h4 class="p-b-15">
                                    <a href="/Home/BlogDetay/@item.BlogId" class="ltext-108 cl2 hov-cl1 trans-04">
                                       @item.Baslik
                                    </a>
                                </h4>

                                <p class="stext-117 cl6">
                                    @Html.Raw(item.Icerik.Substring(0,10))
                                </p>

                                <div class="flex-w flex-sb-m p-t-18">
                                    <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10">
                                        <span>
                                            <span class="cl4">By</span> Admin
                                            <span class="cl12 m-l-4 m-r-6">|</span>
                                        </span>

                                        <span>
                                           @item.BlogKategori.KategoriAd
                                            <span class="cl12 m-l-4 m-r-6">|</span>
                                        </span>

                                        <span>
                                           @item.Yorum.Count();
                                        </span>
                                    </span>

                                    <a href="/Home/BlogDetay/@item.BlogId" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10">
                                        Continue Reading

                                        <i class="fa fa-long-arrow-right m-l-9"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }


