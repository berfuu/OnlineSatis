    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/Content/SiteLayout/images/bg-02.jpg');">
    <h2 class="ltext-105 cl0 txt-center">
        Blog
