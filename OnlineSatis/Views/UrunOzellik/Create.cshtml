@model OnlineSatis.Models.DB.UrunVaryant
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Ürün Özellik Ekle</h2>


<div class="form">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create/" enctype="multipart/form-data">*@

    @using (Html.BeginForm("Create", "UrunOzellik", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownListFor(dff=>dff.UrunId,(IEnumerable<SelectListItem>)ViewBag.Urun, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Label <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Label" name="Label" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Value <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Value" name="Value" type="text" required />
            </div>
        </div>


        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/UrunOzellik/Index">İptal</a></button>
            </div>
        </div>
    }

    @*</form>*@
</div>
