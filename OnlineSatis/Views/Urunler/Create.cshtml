@using System.Configuration
@model OnlineSatis.Models.DB.Urun
 @{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Ürün Ekle</h2>


<div class="form">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create/" enctype="multipart/form-data">*@

    @using (Html.BeginForm("Create", "Urunler", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Adı <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="@Html.DisplayNameFor(dff=>dff.Adi)" name="@Html.DisplayNameFor(dff=>dff.Adi)" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required"></span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="@Html.DisplayNameFor(dff=>dff.Aciklama)"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Alış Fiyatı <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Alis" name="@Html.DisplayNameFor(dff=>dff.AlisFiyat)" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Satış Fiyatı <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Satis" name="@Html.DisplayNameFor(dff=>dff.SatisFiyat)"  type="text" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownListFor(dff=>dff.KategoriId,(IEnumerable<SelectListItem>)ViewBag.Kategoriler, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Marka <span class="required">*</span></label>
            <div class="col-lg-10">
                @*@Html.DropDownList("MarkaId",null, new { @class = "form-control" })*@
                @Html.DropDownListFor(dff=>dff.MarkaId,(IEnumerable<SelectListItem>)ViewBag.Markalar, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim </label>
            <div class="col-lg-10">
                <input required type="file" class="form-control" id="BrandImg" multiple name="BrandImg" accept=".jpg,.png.,.jpeg" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Eklenme Tarihi <span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Tarih" name="Tarih"  type="text" required value="@DateTime.Now" disabled />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/Urunler/Index">İptal</a></button>
            </div>
        </div>
    }

    @*</form>*@
</div>

