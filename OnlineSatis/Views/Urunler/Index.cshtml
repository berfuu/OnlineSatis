@model IEnumerable<OnlineSatis.Models.DB.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürünler</h2>

<a class="btn btn-success btn-sm"href="/Urunler/Create/"><i class="glyphicon glyphicon-plus">Yeni Ürün Ekle</i></a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>id</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Eklenme Tarihi</th>
            <th>Kategori Adı</th>
            <th>Marka Adı</th>
            <th>Resim</th>
            <th>İşlemler</th>
            
            


         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UrunId</td>
            <td>@item.Adi</td>
            <td>@item.Aciklama</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.EklenmeTarihi</td>
            <td>@item.Kategori.Adi</td>
            <td>@item.Marka.Adi</td>
            <td>
                <a class="btn btn-sm btn-primary btn-block" href="/Galeri/Index?urunid=@Html.DisplayFor(s=>item.UrunId)">Resimlere Göz At</a>
            </td>

            <td><a href="/Urunler/Edit/@item.UrunId">Güncelle</a> | <a href="/Urunler/Delete/@item.UrunId">Sil</a></td>


        </tr>
        }


    </tbody>
</table>